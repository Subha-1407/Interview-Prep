<%- include('../partials/header'); %>



<div class="container">
    <h1 style="text-align: center;">Add a new Company</h1>

    <div style="width: 30%;margin: 0 auto ;">
        <form action="/analytics" method="POST">        
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Name" name="company[name]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Image url" name="company[image]">
            </div>

            <div class="form-group">
                <button>Submit</button>
            </div>
        
        
        </form>
    
        <p style="margin: 0 auto;">
            <a class="btn btn-primary" href="/analytics">Analytics Companies</a>
        </p>
    </div>
</div>




