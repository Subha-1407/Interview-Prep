<%- include('../partials/header'); %>



<div class="container">
    <h1 style="text-align: center;">Add your experince for <%= company.name %></h1>

    <div style="width: 30%;margin: 0 auto ;">
        <form action="/analytics/<%= company.id %>/posts" method="POST">  
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Title" name="post[title]">
            </div>      
            <div class="form-group">
                <textarea class="form-control" name="post[text]" id="" placeholder="Enter your experince" cols="30" rows="15"></textarea>                                
            </div>
            

            <div class="form-group">
                <button>Submit</button>
            </div>
        
        
        </form>
    
        <p style="margin: 0 auto;">
            <a class="btn btn-primary" href="/analytics/<%= company.id %>">Back</a>
        </p>
    </div>
</div>




<%- include('../partials/footer'); %>